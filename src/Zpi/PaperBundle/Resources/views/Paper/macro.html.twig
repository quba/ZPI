{% macro show_type(paper) %}
{% if paper.paymentType == constant('Zpi\\PaperBundle\\Entity\\Paper::PAYMENT_TYPE_FULL') %}
    {% trans %}paper.full{% endtrans %}
{% elseif paper.paymentType == constant('Zpi\\PaperBundle\\Entity\\Paper::PAYMENT_TYPE_EXTRAPAGES') %}
    {% trans %}paper.extrapages{% endtrans %}
{% endif %}
{% endmacro %}
