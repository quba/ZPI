{% macro show_status(status) %}
{% if status is sameas(constant('Zpi\\PaperBundle\\Entity\\Review::MARK_REJECTED')) %}
    {% trans %}review.rejected{% endtrans %}
{% elseif status == constant('Zpi\\PaperBundle\\Entity\\Review::MARK_CONDITIONALLY_ACCEPTED') %}
    {% trans %}review.conditionally_accepted{% endtrans %}
{% elseif status == constant('Zpi\\PaperBundle\\Entity\\Review::MARK_ACCEPTED') %}
    {% trans %}review.accepted{% endtrans %}
{% elseif status == constant('Zpi\\PaperBundle\\Entity\\Review::MARK_NO_MARK') %}
	{% trans %}review.not_marked{% endtrans %}
{% endif %}
{% endmacro %}
